            </td>
            <td>
                @Html.DisplayFor(modelItem => item.specialty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ohipRegistration)
            </td>
